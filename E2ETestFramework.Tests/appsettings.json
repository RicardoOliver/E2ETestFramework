{
  "TestSettings": {
    "Browser": "Chrome",
    "Headless": false,
    "TimeoutSeconds": 30,
    "BaseUrl": "https://the-internet.herokuapp.com",
    "Environment": "Test",
    "ApplicationName": "E2E Test Application",
    "TestDataPath": "TestData",
    "ScreenshotOnFailure": true,
    "VideoRecording": false,
    "ChromeArguments": [ "--disable-background-timer-throttling", "--disable-backgrounding-occluded-windows" ],
    "FirefoxPreferences": {
      "dom.webdriver.enabled": false,
      "useAutomationExtension": false
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "TestDatabase": "Server=localhost;Database=TestDB;Trusted_Connection=true;"
  }
}
